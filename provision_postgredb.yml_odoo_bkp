- name: Odoo servers setup in a Docker container
  hosts: odoo2
  gather_facts: yes
  vars_files:
    - vars/main.yml
  roles:
    - { role: odoo_setup, become: yes, decome_method: sudo } 

- name: Setup nginx server and configure as reverse proxy
  hosts: nginx
  gather_facts: yes
  vars_files:
    - vars/main.yml
  roles:
    - nginx_setup 
